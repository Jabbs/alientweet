$('document').ready(function() {
	$('#new-bucket').click(function (e) {
		e.preventDefault();
		$("#bucket-form").fadeIn(400);
		$("#new-bucket").hide();
		$("#cancel-bucket").show();
		$('#bucket_name').focus();
	});
	$('#cancel-bucket').click(function (e) {
		e.preventDefault();
		$("#bucket_name").val("");
		$("#bucket-form").hide();
		$("#new-bucket").show();
		$("#cancel-bucket").hide();
	});
	$('#new-contributor').click(function (e) {
		e.preventDefault();
		$("#contributor-form").fadeIn(400);
		$("#new-contributor").hide();
		$("#cancel-contributor").show();
		$('#contributor_name').focus();
	});
	$('#cancel-contributor').click(function (e) {
		e.preventDefault();
		$("#contributor_name").val("");
		$("#contributor-form").hide();
		$("#new-contributor").show();
		$("#cancel-contributor").hide();
	});
});