$('document').ready(function() {
	$('#new-organization').click(function (e) {
		e.preventDefault();
		$("#organization-form").fadeIn(400);
		$("#new-organization").hide();
		$("#cancel-organization").show();
		$('#organization_name').focus();
	});
	$('#cancel-organization').click(function (e) {
		e.preventDefault();
		$("#organization_name").val("");
		$("#organization-form").hide();
		$("#new-organization").show();
		$("#cancel-organization").hide();
	});
});