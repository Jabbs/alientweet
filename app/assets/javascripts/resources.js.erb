$('document').ready(function() {
	$('#new-resource').click(function (e) {
		e.preventDefault();
		$("#resource-form").fadeIn(400);
		$("#new-resource").hide();
		$("#cancel-resource").show();
		$('#resource_name').focus();
	});
	$('#cancel-resource').click(function (e) {
		e.preventDefault();
		$("#resource_name").val("");
		$("#resource-form").hide();
		$("#new-resource").show();
		$("#cancel-resource").hide();
	});
});