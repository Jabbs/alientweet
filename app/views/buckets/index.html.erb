<div class="container" style="margin-bottom:600px;">
	<div class="row">
		<div class="col-md-12">
			<%= link_to "Organizations", root_path %>
			/
			<%= @organization.name %>
			<div class="pull-right">
				Resources:
				<%= render "shared/resource_links" %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="well">
				<div class="row small-bottom-margin">
					<div class="col-md-9">
						<strong>Buckets for "<%= @organization.name %>"</strong>
					</div>
					<div class="col-md-3">
						<strong>Contributors for "<%= @organization.name %>"</strong>
					</div>
				</div>

				<div class="row">
					<div class="col-md-9">
						<%= render @buckets %>
						<div class="row">
							<div class="col-md-12">
								<div id="bucket-form" style="display:none;"><%= render "buckets/form" %></div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<%= link_to "#", id: "new-bucket", class: "grey-link" do %>
									<i class="fa fa-plus-circle" style="font-size:200%;"></i>
								<% end %>
								<a href="#" class="grey-link">
									<i class="fa fa-minus-circle" id="cancel-bucket" style="font-size:200%;display:none;"></i>
								</a>
							</div>
						</div>
						
					</div>
					<div class="col-md-3">
						<%= render @contributors %>
						<div class="row">
							<div class="col-md-12">
								<div id="contributor-form" style="display:none;"><%= render "contributors/form" %></div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<%= link_to "#", id: "new-contributor", class: "grey-link" do %>
									<i class="fa fa-plus-circle" style="font-size:200%;"></i>
								<% end %>
								<a href="#" class="grey-link">
									<i class="fa fa-minus-circle" id="cancel-contributor" style="font-size:200%;display:none;"></i>
								</a>
							</div>
						</div>
					</div>
					
				</div>
				
				<hr class="blue-hr">
				<div class="row">
					<div class="col-md-4">
						<h4 class="center">Tweets Created</h4>
						<% @unapproved_tweets.each do |tweet| %>
							<%= render "tweets/tweet", tweet: tweet, date: tweet.created_at %>
						<% end %>
						<% if @unapproved_tweets.size == 0 %>
							<h4 class="center top-margin"><em>None</em></h4>
						<% end %>
					</div>
					<div class="col-md-4">
						<h4 class="center">Tweets Approved</h4>
						<% @approved_tweets.each do |tweet| %>
							<%= render "tweets/tweet", tweet: tweet, date: tweet.last_approved_at %>
						<% end %>
						<% if @approved_tweets.size == 0 %>
							<h4 class="center top-margin"><em>None</em></h4>
						<% end %>
					</div>
					<div class="col-md-4">
						<h4 class="center">Tweets Sent</h4>
						<% @sent_tweets.each do |tweet| %>
							<%= render "tweets/tweet", tweet: tweet, date: tweet.last_sent_at %>
						<% end %>
						<% if @sent_tweets.size == 0 %>
							<h4 class="center top-margin"><em>None</em></h4>
						<% end %>
					</div>
				</div>
				
			</div>
		</div>
	</div>
</div>