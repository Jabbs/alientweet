<div class="container">
	<div class="row">
		<div class="col-md-12">
			<%= link_to "Organizations", root_path %>
			/
			<%= @organization.name %>
			<div class="pull-right">
				Resources:
				<%= link_to "Archived", organization_archived_resources_path(@organization) %>
				|
				<%= link_to "All", organization_all_resources_path(@organization) %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="well">
				<div class="row">
					<div class="col-md-12">
						<strong>"<%= @organization.name %>" Buckets</strong>
					</div>
				</div>
				<hr class="blue-hr">
				<div id="organizations">
					<div class="row">
						<div class="col-md-12">
							<%= render @buckets %>
						</div>
					</div>
					
					<div class="row">
						<div class="col-md-6">
							<div id="bucket-form" style="display:none;"><%= render "buckets/form" %></div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12">
							<%= link_to "#", id: "new-bucket", class: "grey-link" do %>
								<i class="fa fa-plus-circle" style="font-size:200%;"></i>
							<% end %>
							<a href="#" class="grey-link">
								<i class="fa fa-minus-circle" id="cancel-bucket" style="font-size:200%;display:none;"></i>
							</a>
						</div>
					</div>
				</div>
				<hr class="blue-hr">
				<div class="row">
					<div class="col-md-4">
						<h4 class="center">Tweets Created</h4>
						<% @unapproved_tweets.each do |tweet| %>
							<%= render "tweets/tweet", tweet: tweet, date: tweet.created_at %>
						<% end %>
						<% if @unapproved_tweets.size == 0 %>
							<h4 class="center top-margin"><em>None</em></h4>
						<% end %>
					</div>
					<div class="col-md-4">
						<h4 class="center">Tweets Approved</h4>
						<% @approved_tweets.each do |tweet| %>
							<%= render "tweets/tweet", tweet: tweet, date: tweet.last_approved_at %>
						<% end %>
						<% if @approved_tweets.size == 0 %>
							<h4 class="center top-margin"><em>None</em></h4>
						<% end %>
					</div>
					<div class="col-md-4">
						<h4 class="center">Tweets Sent</h4>
						<% @sent_tweets.each do |tweet| %>
							<%= render "tweets/tweet", tweet: tweet, date: tweet.last_sent_at %>
						<% end %>
						<% if @sent_tweets.size == 0 %>
							<h4 class="center top-margin"><em>None</em></h4>
						<% end %>
					</div>
				</div>
				
			</div>
		</div>
	</div>
</div>