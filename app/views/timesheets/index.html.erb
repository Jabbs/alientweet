<div class="container" style="margin-bottom:600px;">
	<div class="row">
		<div class="col-md-12">
			<%= link_to "Organizations", root_path %>
			/
			<%= link_to @organization.name, organization_buckets_path(@organization) %>
			<div class="pull-right">
				Resources:
				<%= render "shared/resource_links" %>
			</div>
		</div>
	</div>
	
	<div class="row">
		<div class="col-md-12">
			<div class="well">
				<div class="row small-bottom-margin">
					<div class="col-md-12">
						<strong>Staged Tweets</strong>
					</div>
				</div>
				<% @approved_tweets.each do |tweet| %>
					<%= render "tweets/tweet_compact", tweet: tweet %>
				<% end %>
				<% if @approved_tweets.size == 0 %>
					<h4 class="center top-margin"><em>None</em></h4>
				<% end %>
			</div>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-md-12">
			<div class="well">
				<div class="row small-bottom-margin">
					<div class="col-md-12">
						<strong>Timesheets</strong>
					</div>
				</div>
				<% @timesheets.each do |timesheet| %>
					<%= render "timesheets/timesheet", timesheet: timesheet %>
				<% end %>
				<% if @timesheets.size == 0 %>
					<h4 class="center top-margin"><em>None</em></h4>
				<% end %>
				<hr>
				<div class="row">
					<div class="col-md-12">
						<a class="btn btn-primary" data-toggle="modal" data-target="#newTimesheetModal" href="#" role="button">Generate Timesheet</a>
						<%= render "timesheets/new_modal" %>
					</div>
				</div>
			</div>
		</div>
	</div>
	
</div>