<%= form_for [resource.bucket.organization, resource.bucket, resource], method: :put, html: {class: "inline"} do |f| %>
	<%= f.hidden_field :bucket_id, value: resource.bucket.id %>
	<% if resource.archived == false %>
		<%= f.hidden_field :archived, value: true %>
		<%= f.hidden_field :last_archived_at, value: DateTime.now %>
	<% else %>
		<%= f.hidden_field :archived, value: false %>
	<% end %>
	<% if resource.archived == false %>
		<%= f.submit "Archive", class: "btn btn-default #{btn_size} btn-success-hover #{placement}" %>
	<% else %>
		<%= f.submit "âœ“ Archived", class: "btn btn-default #{btn_size} btn-danger-hover #{placement}" %>
	<% end %>
<% end %>