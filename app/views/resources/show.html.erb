<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>AlienText</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<%= link_to "Organizations", root_path %>
			/
			<%= link_to @organization.name, @organization %>
			/
			<%= link_to "resources", organization_resources_path(@organization) %>
			/
			<%= @resource.name %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="well">

				<div class="row">
					<div class="col-md-1">Name:</div>
					<div class="col-md-11">
						<a href="<%= @resource.url %>" target="_blank">
							<%= @resource.name %>
						</a>
					</div>
				</div>
				<div class="row">
					<div class="col-md-1">Body:</div>
					<div class="col-md-11">
						<%= @resource.body %>
					</div>
				</div>
				
			</div>
		</div>
	</div>
</div>